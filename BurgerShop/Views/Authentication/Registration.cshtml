@model RegistrationRequest
@{
    ViewData["Title"] = "Registration Page";
}
<h3 class="mb-3">Registration</h3>
<form  method="post">    
    <div class="text-danger" asp-validation-summary="All"></div>
    <div class="mb-1">
        <label asp-for="Login"></label>
    </div>
    <div class="row">
        <div class="col-3">
            <input class="form-control mb-2" type="text" asp-for="Login" />
        </div>
    </div>
    <div class="mb-1">
        <label asp-for="Password"></label>
    </div>
    <div class="row">
        <div class="col-3">
            <input class="form-control mb-2" type="password" asp-for="Password" />
        </div>
    </div>
    <div class="mb-1">
        <label asp-for="PasswordConfirm"></label>
    </div>
    <div class="row">
        <div class="col-3">
            <input class="form-control mb-2" type="password" asp-for="PasswordConfirm" />
        </div>
    </div>
    <div class="mb-1">
        <label asp-for="FirstName"></label>
    </div>
    <div class="row">
        <div class="col-3">
            <input class="form-control mb-2" type="text" asp-for="FirstName" />
        </div>
    </div>
    <div class="mb-1">
        <label asp-for="LastName"></label>
    </div>
    <div class="row">
        <div class="col-3">
            <input class="form-control mb-2" type="text" asp-for="LastName" />
        </div>
    </div>
    <div class="mb-1">
        <label asp-for="Age"></label>
    </div>
    <div class="row">
        <div class="col-3">
            <input class="form-control mb-3" type="number" asp-for="Age" />
        </div>
    </div>
    <div>
        <input type="submit" class="btn btn-primary" value="Зарегистрироваться" />
    </div>
    <div class="col-5">
    </div>
</form>