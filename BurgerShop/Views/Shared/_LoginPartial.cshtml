@if (User.Identity.IsAuthenticated)
{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Manage">Привет, @User.Identity?.Name</a>
        </li>
        <li class="nav-item">
            <form method="get" class="form-inline" asp-area="" asp-controller="Authentication" asp-action="Logout">
                <button type="submit" class="nav-link btn btn-link text-dark" style="border: 0px;">Выход</button>
            </form>
        </li>
    </ul>
}
else
{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Authentication" asp-action="Registration">Регистрация</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Authentication" asp-action="Login">Вход</a>
        </li>
    </ul>
   
}